<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:text=""
            android:id="@+id/first_tv_patrol_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:enabled="false"
            android:id="@+id/first_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(暂无数据)"
            android:textSize="20dp" />

        <RadioGroup
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:id="@+id/first_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:enabled="false"
                android:textSize="30dp"
                android:id="@+id/first_radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√" />

            <RadioButton
                android:enabled="false"
                android:layout_marginLeft="50dp"
                android:textSize="30dp"
                android:id="@+id/first_radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×" />
        </RadioGroup>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:id="@+id/first_degree_full"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:enabled="false"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/first_fir_part"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:enabled="false"
                    android:id="@+id/first_degree_number"
                    android:inputType="number"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:enabled="false"
                    android:text="℃"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/first_second_degree_full"
                android:orientation="horizontal"
                android:layout_width="90dp"
                android:layout_height="wrap_content">
                <TextView
                    android:enabled="false"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/first_second_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:enabled="false"
                    android:id="@+id/first_secod_degree_number"
                    android:inputType="number"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:enabled="false"
                    android:text="℃"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
