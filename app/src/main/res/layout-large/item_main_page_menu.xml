<?xml version="1.0" encoding="utf-8"?>
<com.whut.smartinspection.widgets.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:paddingTop="20dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_main_page_menu"
            android:adjustViewBounds="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/tv_main_page_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_main_page_menu"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#bfb89c" />
    </RelativeLayout>

</com.whut.smartinspection.widgets.SquareLayout>